# VaultCraft production environment template
# Copy to .env on the production host with real secrets.

# --- Execution flags ---
ENABLE_LIVE_EXEC=1
ENABLE_HYPER_SDK=1
ENABLE_USER_WS_LISTENER=1
ENABLE_SNAPSHOT_DAEMON=1
SNAPSHOT_INTERVAL_SEC=10

# --- Hyper endpoints (production) ---
HYPER_RPC_URL=https://rpc.hyperliquid.xyz/evm
HYPER_API_URL=https://api.hyperliquid.xyz
HYPER_WS_URL=wss://api.hyperliquid.xyz/ws

# --- Execution risk guardrails ---
EXEC_ALLOWED_SYMBOLS=BTC,ETH
EXEC_MIN_LEVERAGE=1.0
EXEC_MAX_LEVERAGE=25.0
EXEC_MIN_NOTIONAL_USD=25
EXEC_MAX_NOTIONAL_USD=1000000
EXEC_MARKET_SLIPPAGE_BPS=30
EXEC_RO_SLIPPAGE_BPS=50
EXEC_RETRY_ATTEMPTS=1
EXEC_RETRY_BACKOFF_SEC=1
APPLY_DRY_RUN_TO_POSITIONS=0
APPLY_LIVE_TO_POSITIONS=1
ENABLE_CLOSE_FALLBACK_RO=1

# --- Operator identity (replace with vaulted secrets) ---
PRIVATE_KEY=0xPROD_DEPLOYER_PRIVATE_KEY
HYPER_TRADER_PRIVATE_KEY=0xPROD_TRADER_PRIVATE_KEY
ADDRESS=0xPROD_MANAGER_ADDRESS

# --- Backend service paths ---
POSITIONS_FILE=/var/vaultcraft/data/positions.json
EVENT_LOG_FILE=/var/vaultcraft/logs/events.jsonl

# --- Deployment & auth ---
DEPLOYMENT_API_TOKEN=prod-deployment-token

# --- Alerts ---
ALERT_WEBHOOK_URL=https://alerts.vaultcraft.example.com/webhook
ALERT_COOLDOWN_SEC=300
ALERT_NAV_DRAWDOWN_PCT=0.04

# --- Logging (rotated JSON logs) ---
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=/var/vaultcraft/logs/backend.log

# --- Frontend ---
NEXT_PUBLIC_BACKEND_URL=https://api.vaultcraft.example.com
NEXT_PUBLIC_RPC_URL=https://rpc.hyperliquid.xyz/evm
NEXT_PUBLIC_ENABLE_DEMO_TRADING=0
NEXT_PUBLIC_DEFAULT_ASSET_ADDRESS=0xPROD_USDC_ADDRESS

# --- Price cache knobs ---
PRICE_TIMEOUT=3
PRICE_CACHE_TTL=1
NAV_CACHE_TTL=1
PRICE_RETRIES=1
PRICE_RETRY_BACKOFF_SEC=0.2
