# Root .env for unified configuration

# Backend (Hyper)
HYPER_RPC_URL=https://rpc.hyperliquid-testnet.xyz/evm
HYPER_API_URL=https://api.hyperliquid-testnet.xyz
ENABLE_HYPER_SDK=1
PRICE_TIMEOUT=5
PRICE_CACHE_TTL=2
NAV_CACHE_TTL=2
PRICE_RETRIES=2
PRICE_RETRY_BACKOFF_SEC=0.2

# Exec risk (demo defaults)
EXEC_ALLOWED_SYMBOLS=BTC,ETH,XAU
EXEC_ALLOWED_VENUES=hyper,mock_gold
EXEC_MIN_LEVERAGE=1
EXEC_MAX_LEVERAGE=5
EXEC_MIN_NOTIONAL_USD=10
EXEC_MAX_NOTIONAL_USD=100000
MOCK_GOLD_PRICE=2350

# Backend positions store (optional override)
# POSITIONS_FILE=deployments/positions.json

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:8000
NEXT_PUBLIC_RPC_URL=https://rpc.hyperliquid-testnet.xyz/evm
NEXT_PUBLIC_ENABLE_DEMO_TRADING=0

# Alerts (optional，建议配置以演示电话/短信告警)
ALERT_WEBHOOK_URL=
ALERT_COOLDOWN_SEC=120
ALERT_NAV_DRAWDOWN_PCT=0.05

# Backend deployment interface（可选，缺省要求手动脚本操作）
DEPLOYMENT_API_TOKEN=

# Quant API (optional)
QUANT_API_KEYS=alpha,beta
ENABLE_QUANT_ORDERS=0

# Hardhat
# PRIVATE_KEY=0xYOUR_TESTNET_PRIVATE_KEY
